<%=@topic.title %>
<% @topic.posts.each do |post| %>
 <li>
   日付:<%=post.created_at %>
   本文:<%=post.content %>
   名前:<%=post.name %>
 </li>
<% end %>

<%=form_for([@topic,@topic.posts.build]) do |f| %>
 <%=f.label :name %>
 <%=f.text_field :name %>

 <%=f.label :content %>
 <%=f.text_area :content %>

 <%=f.submit "Post"%>

<% end %>
